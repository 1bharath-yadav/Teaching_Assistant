# Teaching Assistant Environment Configuration
# Make a copy of this file named .env and fill in your values

# ******************** Server Configuration ********************
API_HOST=0.0.0.0
API_PORT=8000
DEVELOPMENT=false

# ******************** Frontend Origins (for CORS) ********************
FRONTEND_URL_DEV=http://localhost:3000
FRONTEND_URL_PROD=https://your-frontend-domain.com

# ******************** Database and Search ********************
TYPESENSE_URL=http://localhost:8108
TYPESENSE_API_KEY=your_typesense_api_key
TYPESENSE_DATA_DIR=./typesense-data

# ******************** LLM Provider Configuration ********************
# For OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
# For Ollama (uncomment if using Ollama)
# OPENAI_BASE_URL=http://localhost:11434/v1
# For Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# ******************** Logging ********************
LOG_LEVEL=INFO
